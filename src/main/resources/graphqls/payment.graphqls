extend type Query {
	getStripePubKey : String!
	getStripeTransactionsByRound(
		roundId: String!
	) : [StripeTransaction]
	getStripeTransactionsByUser
	 : [StripeTransaction]
	getStripeTransactionsByAdmin(
		 userId: String!
	) : [StripeTransaction]
	getStripeTransaction(
		roundId: String!,
	) : [StripeTransaction]
	getStripeTransactionByAdmin(
		roundId: String!,
		userId: String
	) : [StripeTransaction]
	getCryptoTransactionByCode(
		code: String!
	) : CryptoTransaction
	getCryptoTransactionByUser 
	  : [CryptoTransaction]
	getCryptoTransactionByAdmin(
		userId: Int!
	) : [CryptoTransaction]
	getCryptoTransactionByRound(
		roundId: Int!
	) : [CryptoTransaction]
	getCryptoTransaction(
		roundId: Int!,
	) : [CryptoTransaction]
	getCryptoTransactions(
		roundId: Int!,
		userId: Int
	) : [CryptoTransaction]
}

extend type Mutation {
	stripePayment (
		roundId: String,
		amount: Float,
		paymentIntentId: String,
		paymentMethodId: String
	) : PayResponse!
	createCryptoPayment(
		roundId: Int!,
		amount: Float!
	) : CryptoPayload
}

schema {
   query: Query,
   mutation: Mutation
}