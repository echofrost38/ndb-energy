extend type Query {
    # for paypal
    getAllPaypalDepositTxns(
        orderBy: String
    ) : [PaypalDepositTransaction]
    getPaypalDepositTxnsByUser(
        orderBy: String
    ) : [PaypalDepositTransaction]
    getPaypalDepositTxnById(
        id: Int
    ) : PaypalDepositTransaction

    # bank deposit queries
    getAllBankDepositTxns(
        orderBy: String
    ) : [BankDepositTransaction]
    getBankDepositTxnsByUser(
        orderBy: String
    ) : [BankDepositTransaction]
    getBankDepositTxnById(
        id: Int
    ) : BankDepositTransaction
    getBankDepositTxnByIdByAdmin(
        id: Int
    ) : BankDepositTransaction
    getUnconfirmedBankDepositTxns : [BankDepositTransaction]
    getUnconfirmedBankDepositTxnsByUser : [BankDepositTransaction]    
}

extend type Mutation {
    # paypal deposit
    paypalForDeposit(
        amount: Float,
        currencyCode: String,
        cryptoType: String
    ) : OrderResponseDTO
    captureOrderForDeposit(
        orderId: String
    ) : Boolean
    
    # stripe deposit
    stripeForDeposit(
        amount: Float,
        fiatAmount: Float,
        fiatType: String,
        cryptoType: String,
        paymentIntentId: String,
        paymentMethodId: String,
        isSaveCard: Boolean
    ) : PayResponse

    stripeForDepositWithSavedCard(
        amount: Float,
        fiatAmount: Float,
        fiatType: String,
        cryptoType: String,
        cardId: Int,
        paymentIntentId: String,
    ) : PayResponse

    # bank deposit
    bankForDeposit : String
    confirmBankDeposit(
        id: Int,
        currencyCode: String,
        amount: Float,
        cryptoType: String
    ) : BankDepositTransaction
}